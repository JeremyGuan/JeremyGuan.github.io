<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Text text="Hello World"/>
   <Button text="{i18n>showHelloButtonText}"
           press = "onShowHello" />
    <Input
		value="{/recipient/name}"
		description="Hello {recipient/name}"
		valueLiveUpdate="true"
		width="60%"
    	/>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Link
				text="SAPLink"
				target="_blank"
				href="https://github.com/JeremyGuan/SAPLink-plugins/blob/master/install/zsaplink_installer.txt" />
		</l:content>
	</l:VerticalLayout>    	
</mvc:View>